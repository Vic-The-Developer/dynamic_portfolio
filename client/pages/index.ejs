<body>

    <!-- Header Section -->
    <header>
        <h1>Digital Portfolio</h1>
        <nav>
            <a href="#about" class="active">About Me</a>
            <a href="#skills">Skills</a>
            <a href="#projects">Projects</a>
            <a href="#experience">Experience</a>
            <a href="#contact">Contact</a>
            <a href="/admin/login">Login</a>
        </nav>
    </header>

    <!-- About Me Section -->
    <section id="about">
        <h2>I am a <span>Web Developer</span></h2>
        <div class="container1" style="width: 85%; margin: auto;">
            <div class="item">
                <h3>Firstname Lastname</h3>
                <p>Career</p>
                <p>Write a brief introduction about yourself here.</p>
                <button class="btn btn-success">Hire Me</button>
            </div>
            <div class="item">
                <img src="images/me.jpeg" alt="My Image">
            </div>
        </div>
    </section>

    <!-- Skills Section -->
    <section id="skills">
        <h2>Skills</h2>
        <div class="progress item">
            <div class="progress-bar bg-success" role="progressbar" style="width:40%">
              Free Space
            </div>
            <div class="progress-bar bg-warning" role="progressbar" style="width:10%">
              Warning
            </div>
            <div class="progress-bar bg-danger" role="progressbar" style="width:20%">
              Danger
            </div>
        </div>
        <div id="skills-container" class="container1">
            <div class="item">
                <img src="images/me.jpeg" style="width: 100%;" alt="Skills Image">
            </div>
            <div class="item">
                <div class="skillsText">
                    Here shall be a short description of the skills i possess.
                </div>
                <div class="progress progressOther">
                    <div class="progress-bar bg-success" role="progressbar" aria-valuenow="40" aria-valuemin="0" aria-valuemax="100" style="width:40%">
                      40% Complete (success)
                    </div>
                </div>
                <div class="progress progressOther">
                    <div class="progress-bar bg-info" role="progressbar" aria-valuenow="50" aria-valuemin="0" aria-valuemax="100" style="width:50%">
                      50% Complete (info)
                    </div>
                </div>
                <div class="progress progressOther">
                    <div class="progress-bar bg-warning" role="progressbar" aria-valuenow="60" aria-valuemin="0" aria-valuemax="100" style="width:60%">
                      60% Complete (warning)
                    </div>
                </div>
                <div class="progress progressOther">
                    <div class="progress-bar bg-danger" role="progressbar" aria-valuenow="70" aria-valuemin="0" aria-valuemax="100" style="width:70%">
                      70% Complete (danger)
                    </div>
                </div>
            </div>
        </div>
    </section>

